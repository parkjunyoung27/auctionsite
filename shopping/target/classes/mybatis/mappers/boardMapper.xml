<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<select id="boardList" parameterType="hashMap" resultType="BoardDTO"> 
		SELECT * FROM boardview WHERE bcno=#{bcno} 
	</select>	
	
	<select id="boardCategoryList" parameterType="hashMap" resultType="hashMap"> 
		SELECT bcno, category_name, category_insert_date FROM board_category 
	</select>
	
	<insert id="write">
		INSERT INTO board(board_title, board_content,board_cate,member_id) 
		VALUES(#{board_title},#{board_content},#{board_cate},#{member_id})
	</insert>
	
	<select id="detail" parameterType="integer" resultType="BoardDTO"> 
		SELECT * FROM boardview WHERE board_no=#{board_no }
	</select>
	
	<update id="countUp">
		UPDATE board SET board_count=board_count+1 WHERE board_no=#{board_no}
	</update>
	
	<update id="delete">
		UPDATE board SET board_del=1 WHERE board_no=#{board_no}
	</update>
	
</mapper>
